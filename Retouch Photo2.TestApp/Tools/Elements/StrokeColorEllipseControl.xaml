<UserControl
    x:Name="UserControl"
    x:Class="Retouch_Photo2.TestApp.Tools.Elements.StrokeColorEllipseControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="38" 
    Height="38" 
    d:DesignHeight="50"
    d:DesignWidth="50">

    
    <Grid x:Name="RootGrid">
        <Ellipse StrokeThickness="1" Stroke="{ThemeResource AppText}">
            <Ellipse.Fill>
                <ImageBrush ImageSource="ms-appx:///Icons\GrayAndWhite.jpg"/>
            </Ellipse.Fill>
        </Ellipse>

        <Ellipse Margin="1">
            <Ellipse.Fill>
                <SolidColorBrush Color="{x:Bind ViewModel.StrokeColor,Mode=OneWay}"/>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</UserControl>