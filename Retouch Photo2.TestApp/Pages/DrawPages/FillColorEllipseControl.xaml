<UserControl
    x:Class="Retouch_Photo2.TestApp.Pages.DrawPages.FillColorEllipseControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:hsvColorPicker="using:HSVColorPickers"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="200">
    
    <UserControl.Resources>
        <Flyout x:Name="_Flyout" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}">
            <hsvColorPicker:ColorPicker x:Name="_ColorPicker" Width="222" Padding="0" Background="Transparent"/>
        </Flyout>
    </UserControl.Resources>    
    
</UserControl>
