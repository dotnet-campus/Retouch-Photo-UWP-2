<UserControl
    x:Class="Retouch_Photo.Elements.RadiansPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="100"
    Height="100"
    d:DesignHeight="100"
    d:DesignWidth="100">

    <Grid 
        HorizontalAlignment="Stretch"           
        VerticalAlignment="Stretch"
        
        ManipulationMode="All"
        ManipulationStarted="CanvasControl_ManipulationStarted"
        ManipulationDelta="CanvasControl_ManipulationDelta"
        ManipulationCompleted="CanvasControl_ManipulationCompleted"
        >

        <Ellipse x:Name="Ellipse"       
                 Width="100"
                 Height="100"
                 StrokeThickness="1"       
                 Stroke="{ThemeResource AppStroke}"       
                 Fill="{ThemeResource AppFill}"                 
    
                 HorizontalAlignment="Center"       
                 VerticalAlignment="Center"    
                 />

        <Line x:Name="BlackLine" StrokeThickness="4" Stroke="{ThemeResource AppBorderBrush}"/>
        <Line x:Name="WhiteLine" StrokeThickness="2" Stroke="{ThemeResource SystemControlBackgroundBaseHighBrush}"/>

    </Grid>
        
</UserControl>
