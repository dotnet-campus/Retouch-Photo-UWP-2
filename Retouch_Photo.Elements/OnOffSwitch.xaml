<UserControl
    x:Class="Retouch_Photo.Elements.OnOffSwitch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="200">


    <UserControl.Resources>

        <!--Background-->
        <SolidColorBrush x:Name="AccentColor"  Color="{ThemeResource SystemAccentColor}"/>
        <SolidColorBrush x:Name="UnAccentColor" Color="Transparent"/>

        <!--Foreground-->
        <SolidColorBrush x:Name="CheckColor" Color="White"/>
        <SolidColorBrush x:Name="UnCheckColor" Color="{ThemeResource AppTextColor}"/>

    </UserControl.Resources>

    <Border Style="{StaticResource AppRoundedBorderStyle}">
        <StackPanel Orientation="Horizontal">

            <ContentPresenter x:Name="OnSegmented" Width="60" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" >
                <TextBlock x:Name="OnTextBlock"/>
            </ContentPresenter>
            <ContentPresenter x:Name="OffSegmented" Width="60" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" >
                <TextBlock x:Name="OffTextBlock"/>
            </ContentPresenter> 

        </StackPanel>
    </Border>

</UserControl>
