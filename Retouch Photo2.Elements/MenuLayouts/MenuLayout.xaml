<UserControl
    x:Name="UserControl"
    x:Class="Retouch_Photo2.Elements.MenuLayout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="222"
    Height="Auto"              
    BorderThickness="1" 
    BorderBrush="{ThemeResource AppStroke}"
    Background="Transparent"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d" 
    Visibility="Collapsed"
    >


    <UserControl.Resources>
        <!--Flyout-->
        <Flyout x:Name="Flyout" FlyoutPresenterStyle="{StaticResource FlyoutPresenterStyle}">
            <Border x:Name="FlyoutBorder" Width="222">
                <!--Content-->
            </Border>
        </Flyout>
        <!--Style-->
        <Style x:Key="FlyoutPresenterStyle" TargetType="FlyoutPresenter">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="{ThemeResource AppBackground}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource AppBorderBrush}"/>
        </Style>
    </UserControl.Resources>


    <!--Root-->
    <Border x:Name="RootBorder" 
            Width="{x:Bind UserControl.Width,Mode=OneWay}"     
            Height="Auto"      
            BorderThickness="{x:Bind UserControl.BorderThickness,Mode=OneWay}" 
            BorderBrush="{x:Bind UserControl.BorderBrush,Mode=OneWay}" 
            Background="{x:Bind UserControl.Background,Mode=OneWay}" 
            >
        <!--Content-->
    </Border>
</UserControl>