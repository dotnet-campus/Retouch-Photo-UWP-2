<UserControl
    x:Class="Retouch_Photo2.Elements.ExpandAppbarRepeatButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource AppBarBorderThemeBrush}"
    d:DesignHeight="50"
    d:DesignWidth="50"
    >


    <UserControl.Resources>
        <!--Foreground-->
        <SolidColorBrush x:Name="CheckColor" Color="White"/>
        <SolidColorBrush x:Name="UnCheckColor" Color="{ThemeResource AppTextColor}"/>
    </UserControl.Resources>


    <Border x:Name="RootGrid" Style="{StaticResource AppCircleBorderStyle}">
        <Border.Background>
            <SolidColorBrush x:Name="RootBorderBackground"/>
        </Border.Background>
        
        <!--VisualState-->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="CommonStates">

                <VisualState x:Name="Normal">
                    <Storyboard>
                        <PointerUpThemeAnimation Storyboard.TargetName="RootGrid" />
                    </Storyboard>
                </VisualState>


                <VisualState x:Name="Selected">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource CheckColor}" />
                        </ObjectAnimationUsingKeyFrames>
                        <ColorAnimation Storyboard.TargetName="RootBorderBackground" Storyboard.TargetProperty="Color" 
                                        To="{ThemeResource SystemAccentColor}" Duration="0:0:0.2"/>
                    </Storyboard>
                </VisualState>

                <VisualState x:Name="UnSelected">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource UnCheckColor}" />
                        </ObjectAnimationUsingKeyFrames>
                        <ColorAnimation Storyboard.TargetName="RootBorderBackground" Storyboard.TargetProperty="Color" 
                                        To="{ThemeResource AppForegroundColor}" Duration="0:0:0.2"/>
                    </Storyboard>
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <ContentPresenter x:Name="ContentPresenter" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

    </Border>

</UserControl>