<UserControl
    x:Class="Retouch_Photo2.Elements.RenameDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="800"
    d:DesignWidth="800"
    >


    <Border Background="{ThemeResource AppStroke}">

        <Grid x:Name="RootGrid" 
              Padding="24,18,24,24"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Width="320"
              Height="200"
              BorderThickness="1"
              BorderBrush="{ThemeResource AppBorderBrush}" 
              Background="{ThemeResource AppBackground}"
              >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--Head-->
            <StackPanel Orientation="Horizontal">
                <Button x:Name="ExpanedButton" VerticalAlignment="Center" Style="{ThemeResource TextBlockButtonStyle}">
                    <FontIcon Glyph="&#xE96E;" FontFamily="{ThemeResource SymbolThemeFontFamily}"/>
                </Button>
                <TextBlock VerticalAlignment="Center" FontSize="20">
                    Rename Current Project
                </TextBlock>
            </StackPanel>

            <!--Body-->
            <TextBox x:Name="_TextBox" Grid.Row="2" VerticalAlignment="Top"/>

            <!--Foot-->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="4"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="_CloseButton" Grid.Column="1" HorizontalAlignment="Stretch" Style="{StaticResource AppTagAccentLineCircleButton}">
                    <TextBlock>
                        Cancel
                    </TextBlock>
                </Button>
                <Button x:Name="_PrimaryButton" Grid.Column="3" HorizontalAlignment="Stretch" Style="{StaticResource AppTagAccentLineCircleButton}">
                    <TextBlock>
                        OK
                    </TextBlock>
                </Button>
            </Grid>

        </Grid>

    </Border>
</UserControl>