<UserControl
    x:Class="Retouch_Photo2.Elements.FormatComboBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="200"
    >

    
    <Border MinWidth="90" CornerRadius="2" BorderThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" BorderBrush="{ThemeResource AppStroke}" Background="{ThemeResource AppForeground}">
        <ComboBox x:Name="ComboBox" SelectedIndex="0" BorderThickness="0" HorizontalAlignment="Stretch">
            <ComboBoxItem>
                JPEG
            </ComboBoxItem>
            <ComboBoxItem BorderThickness="0,0,0,1" BorderBrush="{ThemeResource AppBorderBrush}">
                PNG
            </ComboBoxItem>
            <ComboBoxItem>
                BMP
            </ComboBoxItem>
            <ComboBoxItem>
                GIF
            </ComboBoxItem>
            <ComboBoxItem>
                TIFF
            </ComboBoxItem>
        </ComboBox>
    </Border>
    
</UserControl>