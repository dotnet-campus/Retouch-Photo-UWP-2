    <ContentDialog.Title>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="ExpanedButton" VerticalAlignment="Center" Style="{ThemeResource TextBlockButtonStyle}">
                <FontIcon Glyph="&#xE96E;" FontFamily="Segoe MDL2 Assets"/>
            </Button>
            <TextBlock  Text="Add New Project" VerticalAlignment="Center"/>
        </StackPanel>
    </ContentDialog.Title>

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="36"/>
            <RowDefinition Height="6"/>
            <RowDefinition Height="36"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="1" Text="Width" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="3" Text="Height" VerticalAlignment="Center"/>

        <Border Grid.Column="1" Grid.Row="1" Height="32" CornerRadius="2" BorderThickness="1" BorderBrush="{ThemeResource AppBorderBrush}" Background="{ThemeResource AppForeground}">
            <pic:NumberPicker x:Name="WidthNumberPicker" Value="1024" Minimum="16" Maximum="16384" Unit="px" />
        </Border>
        <Border Grid.Column="1" Grid.Row="3" Height="32" CornerRadius="2" BorderThickness="1" BorderBrush="{ThemeResource AppBorderBrush}" Background="{ThemeResource AppForeground}">
            <pic:NumberPicker x:Name="HeighNumberPicker" Value="1024" Minimum="16" Maximum="16384" Unit="px"/>
        </Border>

    </Grid>
