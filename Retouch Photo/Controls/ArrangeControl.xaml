                    <TextBlock Text="All" Grid.Column="1" Margin="8,0"   VerticalAlignment="Center"/>
                </Grid>
            </Button>
     
            <Rectangle Margin="12,0" Height="1" StrokeDashArray="2 2" Stroke="{ThemeResource AppBorderBrush}" />

          </StackPanel>

    </Grid>

</UserControl>
