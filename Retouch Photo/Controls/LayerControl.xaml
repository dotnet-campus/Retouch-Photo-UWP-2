            <TextBlock x:Name="AdjustmentTextBlock" Text="Adjustment" Style="{StaticResource AppTextBlock}"/>
            <Border x:Name="AdjustmentBorder" Height="Auto" Style="{StaticResource AppRoundedBorderStyle}">
                <ItemsControl x:Name="AdjustmentsItemsControl" >
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="models:Adjustment">
                            <lay:AdjustmentControl             
                                Adjustment="{x:Bind}"                
                                AdjustmentRemove="AdjustmentControl_AdjustmentRemove"              
                                AdjustmentContext="AdjustmentControl_AdjustmentContext"               
                                />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <ContentControl Height="8"/>
        </StackPanel>

        <!--AdjustmentPanel-->
        <lay:AdjustmentContextControl x:Name="AdjustmentContextControl"/>

