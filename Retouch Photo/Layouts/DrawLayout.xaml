                </ToggleButton>
                <ToggleButton x:Name="EffectsToggleButton" Height="50" Width="60" BorderThickness="0" Background="Transparent">
                    <FlyoutBase.AttachedFlyout>
                        <Flyout x:Name="EffectsFlyout" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}" >
                            <!--Effects-->
                        </Flyout>
                    </FlyoutBase.AttachedFlyout>
                    <PathIcon Data="M12.48,20.802l-1.945,0l0,-5.343l1.945,0l0,5.343Zm-3.108,-2.148l-9.372,0l0,-1.451l9.372,0l0,1.451Zm15.5,0l-11.387,0l0,-1.451l11.387,0l0,1.451Zm-18.392,-5.552l-1.945,0l0,-5.342l1.945,0l0,5.342Zm-3.108,-2.147l-3.372,0l0,-1.451l3.372,0l0,1.451Zm21.5,0l-17.387,0l0,-1.451l17.387,0l0,1.451Zm-7.832,-5.613l-1.945,0l0,-5.342l1.945,0l0,5.342Zm-3.108,-2.147l-13.932,0l0,-1.451l13.932,0l0,1.451Zm10.94,0l-6.827,0l0,-1.451l6.827,0l0,1.451Z"/>
                </ToggleButton>
                <ToggleButton x:Name="OthersToggleButton" Height="50" Width="60" BorderThickness="0" Background="Transparent" >
                    <FlyoutBase.AttachedFlyout>
                        <Flyout x:Name="OthersFlyout" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}" >
                            <!--Others-->
                        </Flyout>
                    </FlyoutBase.AttachedFlyout>
                    <PathIcon Data="M0,4.668l4.562,0l0,-4.668l1.44,0l0,4.668l13.112,0l4.362,-4.362l1.018,1.018l-4.562,4.562l0,12.912l4.562,0l0,1.44l-4.562,0l0,4.667l-1.44,0l0,-4.667l-13.93,0l0,-14.13l-4.562,0l0,-1.44Zm7.02,14.13l11.472,0l0,-11.472l-11.472,11.472Zm-1.018,-12.69l0,11.672l11.672,-11.672l-11.672,0Z"/>
                </ToggleButton>
            </StackPanel>
            
            <Border x:Name="TopRightBorder" Grid.Column="2" >
                <!--Right-->
            </Border>

        </Grid>

        
        <Border x:Name="CenterBorder" Grid.Row="1">
            <!--CenterContent-->
        </Border>
        <Border x:Name="BottomBorder" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" BorderThickness="1,1,1,0" BorderBrush="{ThemeResource AppBorderBrush}" Background="{ThemeResource AppForeground}">
            <!--BottomBar-->
        </Border>


        <ToggleButton  x:Name="WorkLeftBorder" Grid.Column="0" Grid.Row="2" Width="70" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="0,1,0,0" BorderBrush="{ThemeResource AppBorderBrush}" Background="{ThemeResource AppForeground}" />
        <ToggleButton  x:Name="WorkRightBorder" Grid.Column="2" Grid.Row="2" Width="70" FontSize="22" Content="&#xE81E;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="0,1,0,0" BorderBrush="{ThemeResource AppBorderBrush}" Background="{ThemeResource AppForeground}"/>
        <Border x:Name="WorkDismissOverlay" Visibility="Collapsed" Grid.ColumnSpan="3" Grid.RowSpan="3" Background="Transparent" />


         <Border x:Name="LeftBorder" Grid.Column="0" Grid.Row="1" BorderBrush="{ThemeResource AppBorderBrush}">

            <!--Visibility:Show-->
            <animations:Implicit.ShowAnimations>
                <animations:TranslationAnimation Duration="0:0:0.2" From="-100,0,0" To="0,0,0"/>
                <animations:OpacityAnimation Duration="0:0:0.2" From="0.0" To="1.0"/>
            </animations:Implicit.ShowAnimations>

            <!--Visibility:Hide-->
            <animations:Implicit.HideAnimations>
                <animations:TranslationAnimation Duration="0:0:0.2" From="0,0,0" To="-100,0,0"/>
                <animations:OpacityAnimation Duration="0:0:0.2" From="1.0" To="0.0"/>
            </animations:Implicit.HideAnimations>

            <!--LeftPane-->

        </Border>
        <Border x:Name="RightBorder" Grid.Column="3" BorderBrush="{ThemeResource AppBorderBrush}" Background="{ThemeResource SystemControlAcrylicElementBrush}">

            <!--Visibility:Show-->
            <animations:Implicit.ShowAnimations>
                <animations:TranslationAnimation Duration="0:0:0.2" From="100,0,0" To="0,0,0"/>
                <animations:OpacityAnimation Duration="0:0:0.2" From="0.0" To="1.0"/>
            </animations:Implicit.ShowAnimations>

            <!--Visibility:Hide-->
            <animations:Implicit.HideAnimations>
                <animations:TranslationAnimation Duration="0:0:0.2" From="0,0,0" To="100,0,0"/>
                <animations:OpacityAnimation Duration="0:0:0.2" From="1.0" To="0.0"/>
            </animations:Implicit.HideAnimations>

            <!--RightPane-->
        </Border>


    </Grid>
</UserControl>
