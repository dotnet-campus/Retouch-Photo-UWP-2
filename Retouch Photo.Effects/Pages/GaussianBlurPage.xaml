<effects:EffectPage
    x:Class="Retouch_Photo.Effects.Pages.GaussianBlurPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:effects="using:Retouch_Photo.Effects"
    mc:Ignorable="d"
    >

    <StackPanel >
        <TextBlock Text="BlurAmount" Style="{StaticResource AppTextBlock}"/>
        <Slider x:Name="BlurAmountSlider" Minimum="0" Maximum="100" Style="{ThemeResource AppOpacitySliderStyle}"/>
    </StackPanel>
    
</effects:EffectPage>