<UserControl
    x:Class="Retouch_Photo.Adjustments.Control"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Retouch_Photo.Adjustments"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="400">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <ContentPresenter Content="{x:Bind AdjustmentNullConverter(Adjustment)}"/>

        <Button Grid.Column="1" Width="30" Height="40" Style="{ThemeResource DateTimePickerFlyoutButtonStyle}" Tapped="AdjustmentButton_Tapped"
                Visibility="{x:Bind AdjustmentVisibilityConverter(Adjustment)}" >
            <FontIcon FontSize="14" Glyph="&#xEC88;" FontFamily="Segoe MDL2 Assets" Style="{ThemeResource AppIconElement}"/>
        </Button>

        <Button Grid.Column="2" Width="30" Height="40" Style="{ThemeResource DateTimePickerFlyoutButtonStyle}" Tapped="RemoveButton_Tapped">
            <FontIcon FontSize="12" Glyph="&#xE106;" FontFamily="Segoe MDL2 Assets" Style="{ThemeResource AppIconElement}"/>
        </Button>

    </Grid>
</UserControl>
