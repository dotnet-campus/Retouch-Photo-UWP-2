<Page
    x:Class="Retouch_Photo2.Effects.Pages.StraightenPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:element="using:Retouch_Photo2.Elements"
    mc:Ignorable="d"
    >

    <StackPanel >
        
        <TextBlock Text="Angle" Style="{StaticResource AppTextBlock}"/>
        <element:RadiansPicker x:Name="AnglePicker" HorizontalAlignment="Left" VerticalAlignment="Top"
                               BorderBrush="{ThemeResource AppBorderBrush}"
                               Background="{ThemeResource AppForeground}"
                              />

    </StackPanel>
</Page>