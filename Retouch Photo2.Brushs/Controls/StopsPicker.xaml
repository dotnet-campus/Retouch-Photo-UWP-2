<UserControl
    x:Name="UserControl"
    x:Class="Retouch_Photo2.Brushs.Controls.StopsPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Retouch_Photo2.Brushs.Controls"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:hSVColorPickers="using:HSVColorPickers"
    xmlns:transformers="using:FanKit.Transformers"
    mc:Ignorable="d"
    Padding="4"
    Width="480"  
    MinWidth="300" 
    MaxWidth="600"             
    Height="220" 
    MinHeight="200" 
    MaxHeight="280" 
    d:DesignHeight="200"
    d:DesignWidth="400"
    >


    <UserControl.Resources>
        <transformers:CanvasOperator x:Name="CanvasOperator" DestinationControl="{x:Bind CanvasControl}"/>
        <Flyout x:Name="ColorFlyout" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}">
            <local:ColorPicker x:Name="ColorPicker" Width="222"/>
        </Flyout>
    </UserControl.Resources>


    <Grid
        Width="{x:Bind UserControl.Width,Mode=OneWay}"
        MinWidth="{x:Bind UserControl.MinWidth,Mode=OneWay}"
        MaxWidth="{x:Bind UserControl.MaxWidth,Mode=OneWay}"
        Height="{x:Bind UserControl.Height,Mode=OneWay}"
        MinHeight="{x:Bind UserControl.MinHeight,Mode=OneWay}"
        MaxHeight="{x:Bind UserControl.MaxHeight,Mode=OneWay}"         
          >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Canvas-->
        <Border Grid.ColumnSpan="4" Background="White">
            <canvas:CanvasControl x:Name="CanvasControl"/>
        </Border>

        <!--ComboBox-->
        <Border Grid.Row="2" Grid.ColumnSpan="2" Margin="2,0" Style="{StaticResource AppRoundedBorderStyle}">
            <ComboBox x:Name="_BrushTypeComboBox" VerticalAlignment="Stretch" BorderThickness="0" BorderBrush="Transparent" Background="Transparent" HorizontalAlignment="Stretch"
                  >
                <ComboBoxItem x:Name="_LinearGradientComboBoxItem" Content="Linear"/>
                <ComboBoxItem x:Name="_RadialGradientComboBoxItem" Content="Radial"/>
                <ComboBoxItem x:Name="_EllipticalGradientComboBoxItem" Content="Elliptical"/>
            </ComboBox>
        </Border>

        <!--Straw-->
        <Border Grid.Row="4" >
            <hSVColorPickers:StrawPicker x:Name="StrawPicker" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Border>

        <!--Color-->
        <Grid x:Name="ColorButton" Grid.Row="5" Width="48" Height="48" Background="Transparent">
            <Ellipse StrokeThickness="1" Stroke="{ThemeResource AppText}">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="ms-appx:///Icons\GrayAndWhite.jpg"/>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse Margin="1">
                <Ellipse.Fill>
                    <SolidColorBrush x:Name="SolidColorBrush"/>
                </Ellipse.Fill>
            </Ellipse>
        </Grid>

        <!--Opacity-->
        <TextBlock Text="Opacity:" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Right" Style="{ThemeResource AppTextBlock}"/>
        <Border Grid.Column="3" Grid.Row="2" Margin="2,0" Height="40" MinHeight="28" Background="Transparent" Style="{StaticResource AppRoundedBorderStyle}">
            <hSVColorPickers:NumberPicker x:Name="OpacityPicker" Width="Auto"/>
        </Border>


        <!--Offset-->
        <TextBlock Text="Offset:" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Right" Style="{ThemeResource AppTextBlock}"/>
        <Border Grid.Column="3" Grid.Row="4" Margin="2,0" Height="40" MinHeight="28" Background="Transparent" Style="{StaticResource AppRoundedBorderStyle}">
            <hSVColorPickers:NumberPicker x:Name="OffsetPicker" Width="Auto"/>
        </Border>

        <!--Stop-->
        <Border Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="5" Margin="2,0" Height="40" MinHeight="30" MaxWidth="300" Style="{StaticResource AppRoundedBorderStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="CopyButton" Grid.Column="0" Width="Auto" BorderThickness="0" BorderBrush="Transparent" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TextBlock Text="Copy" Foreground="{ThemeResource AppText}"/>
                </Button>
                <Button x:Name="RemoveButton" Grid.Column="1" Width="Auto" BorderThickness="0" BorderBrush="Transparent" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TextBlock Text="Remove" Foreground="{ThemeResource AppText}"/>
                </Button>
                <Button x:Name="ReserveButton" Grid.Column="2" Width="Auto" BorderThickness="0" BorderBrush="Transparent" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TextBlock Text="Reserve" Foreground="{ThemeResource AppText}"/>
                </Button>
            </Grid>
        </Border>

    </Grid>
</UserControl>