<Page
    x:Class="Retouch_Photo2.Adjustments.Pages.VignettePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:hsvColorPickers="using:HSVColorPickers"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="200"
    >

    <Page.Resources>
        <Flyout x:Name="ColorFlyout" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}">
            <hsvColorPickers:ColorPicker x:Name="ColorPicker" Width="200"/>
        </Flyout>
    </Page.Resources>

    <StackPanel>

        <!--Amount-->
        <TextBlock x:Name="AmountTextBlock" Style="{StaticResource AppTextBlock}"/>
        <hsvColorPickers:TouchSlider x:Name="AmountSlider" Minimum="0" Maximum="100">
            <hsvColorPickers:TouchSlider.SliderBrush>
                <LinearGradientBrush  StartPoint="0,0.5" EndPoint="1,0.5">
                    <GradientStop Color="Gray" Offset="0"/>
                    <GradientStop x:Name="AmountRight" Offset="1"/>
                </LinearGradientBrush>
            </hsvColorPickers:TouchSlider.SliderBrush>
        </hsvColorPickers:TouchSlider>

        <!--Curve-->
        <TextBlock x:Name="CurveTextBlock" Style="{StaticResource AppTextBlock}"/>
        <hsvColorPickers:TouchSlider x:Name="CurveSlider" Minimum="0" Maximum="100">
            <hsvColorPickers:TouchSlider.SliderBrush>
                <LinearGradientBrush  StartPoint="0,0.5" EndPoint="1,0.5">
                    <GradientStop Color="Gray" Offset="0"/>
                    <GradientStop x:Name="CurveRight" Offset="1"/>
                </LinearGradientBrush>
            </hsvColorPickers:TouchSlider.SliderBrush>
        </hsvColorPickers:TouchSlider>

        <!--Color-->
        <TextBlock x:Name="ColorTextBlock" Style="{StaticResource AppTextBlock}"/>
        <Border x:Name="ColorButton" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource AppCircleBorderStyle}">
            <Border.Background>
                <SolidColorBrush x:Name="SolidColorBrush"/>
            </Border.Background>
        </Border>

        <ContentControl Height="8"/>
    </StackPanel>
</Page>