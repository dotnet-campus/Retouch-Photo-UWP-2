<UserControl
    x:Class="Retouch_Photo2.Blends.Icons.LinearDodgeIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="50"
    >

    <Canvas Width="24" Height="20">

        <Polygon StrokeThickness="2" Stroke="{ThemeResource SystemControlBackgroundAltHighBrush}" Fill="White">
            <Polygon.Points>
                0,10 10,0 12,2 14,0 24,10 14,20 12,18 10,20
            </Polygon.Points>
        </Polygon>

        <Polygon Fill="Pink">
            <Polygon.Points>
                4,10 12,2 20,10 12,18
            </Polygon.Points>
        </Polygon>
        <Polygon Fill="OrangeRed">
            <Polygon.Points>
                20,10 12,2 14,0 24,10 14,20 12,18
            </Polygon.Points>
        </Polygon>

    </Canvas>

</UserControl>