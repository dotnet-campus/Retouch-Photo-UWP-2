                    </VisualState.Setters>
                </VisualState>
                <!--Difference-->
                <VisualState x:Name="Difference">
                    <VisualState.Setters>
                        <Setter Target = "DifferenceButton.IsEnabled" Value="False"/>
                        <Setter Target = "UserControl.Tag" Value="{x:Bind DifferenceButton.Content}"/>
                    </VisualState.Setters>
                </VisualState>
                <!--Exclusion-->
                <VisualState x:Name="Exclusion">
                    <VisualState.Setters>
                        <Setter Target = "ExclusionButton.IsEnabled" Value="False"/>
                        <Setter Target = "UserControl.Tag" Value="{x:Bind ExclusionButton.Content}"/>
                    </VisualState.Setters>
                </VisualState>

                <!--Hue-->
                <VisualState x:Name="Hue">
                    <VisualState.Setters>
                        <Setter Target = "HueButton.IsEnabled" Value="False"/>
                        <Setter Target = "UserControl.Tag" Value="{x:Bind HueButton.Content}"/>
                    </VisualState.Setters>
                </VisualState>
                <!--Saturation-->
                <VisualState x:Name="Saturation">
                    <VisualState.Setters>
                        <Setter Target = "SaturationButton.IsEnabled" Value="False"/>
                        <Setter Target = "UserControl.Tag" Value="{x:Bind SaturationButton.Content}"/>
                    </VisualState.Setters>
                </VisualState>
                <!--Color-->
                <VisualState x:Name="Color">
                    <VisualState.Setters>
                        <Setter Target = "ColorButton.IsEnabled" Value="False"/>
                        <Setter Target = "UserControl.Tag" Value="{x:Bind ColorButton.Content}"/>
                    </VisualState.Setters>
                </VisualState>

                <!--Luminosity-->
                <VisualState x:Name="Luminosity">
