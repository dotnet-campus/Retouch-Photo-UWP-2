<UserControl
    x:Name="UserControl"
    x:Class="Retouch_Photo2.Selections.Button"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="100"
    >

    <Button x:Name="_RootButton" Width="Auto" BorderThickness="0" BorderBrush="Transparent" Background="Transparent" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
        <Grid Height="44" Padding="8,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Enabled-->
            <Viewbox x:Name="EnabledViewbox" Width="28" Height="28" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Visibility="{x:Bind BoolToVisibleConverter(UserControl.IsEnabled),Mode=OneWay}"/>
      
            <!--Disabled-->
            <Viewbox x:Name="DisabledViewbox" Width="28" Height="28" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Visibility="{x:Bind BoolToCollapsedConverter(UserControl.IsEnabled),Mode=OneWay}"/>

            <TextBlock x:Name="TextBlock" Grid.Column="2" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
        </Grid>
    </Button>
    
</UserControl>