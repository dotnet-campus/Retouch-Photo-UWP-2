<UserControl
    x:Name="UserControl"
    x:Class="Retouch_Photo2.Layers.Icons.GeometryDiamondIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="50"
    >
    
    <Grid>
        <Polygon Fill="{x:Bind UserControl.Foreground, Mode=OneWay}" Opacity="0.5">
            <Polygon.Points>
                12,0 24,12 12,24 0,12
            </Polygon.Points>
        </Polygon>
        <Polygon StrokeThickness="1" Stroke="{x:Bind UserControl.Foreground, Mode=OneWay}">
            <Polygon.Points>
                12,0 24,12 12,24 0,12
            </Polygon.Points>
        </Polygon>
    </Grid>

</UserControl>