<UserControl
    x:Class="Retouch_Photo2.Layers.LayerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="40"
    d:DesignWidth="200"
    Height="40"
    >

    <UserControl.Resources>

        <!--Background-->
        <SolidColorBrush x:Name="AccentColor" Color="{ThemeResource SystemAccentColor}"/>
        <SolidColorBrush x:Name="UnAccentColor" Color="Transparent"/>
        <SolidColorBrush x:Name="ThreeStateColor" Opacity="0.6" Color="{ThemeResource SystemAccentColor}"/>
        <SolidColorBrush x:Name="FourStateColor" Opacity="0.15" Color="{ThemeResource SystemAccentColor}"/>

        <!--Foreground-->
        <SolidColorBrush x:Name="CheckColor" Color="White"/>
        <SolidColorBrush x:Name="UnCheckColor" Color="{ThemeResource SystemBaseHighColor}"/>

        <!--Style-->
        <Style x:Key="OverlayStyle" TargetType="Border">
            <Setter Property="IsHitTestVisible" Value="False"/>
            <Setter Property="Visibility" Value="Collapsed"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
            <Setter Property="Background" Value="{StaticResource ThreeStateColor}"/>
        </Style>

    </UserControl.Resources>


    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="DepthColumn" Width="0"/>
            <ColumnDefinition Width="24"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="2"/>
        </Grid.ColumnDefinitions>

        <!--Expaned-->
        <Button x:Name="_ExpanedButton" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0" BorderBrush="Transparent" Background="Transparent">
            <FontIcon x:Name="ExpanedFontIcon" FontSize="12" FontFamily="{ThemeResource SymbolThemeFontFamily}"/>
        </Button>

        <!--Icon-->
        <Border x:Name="IconBorder" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!--Icon-->
        <TextBlock x:Name="TextBlock" Grid.Column="3" Margin="8,0" VerticalAlignment="Center"/>

        <!--Selected-->
        <Button x:Name="_SelectedButton" Grid.Column="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0" BorderBrush="Transparent" Background="Transparent">
            <FontIcon x:Name="SelectedFontIcon" Glyph="&#xE001;" FontSize="18" Foreground="{StaticResource UnCheckColor}" FontFamily="{ThemeResource SymbolThemeFontFamily}"/>
        </Button>

        <!--Line-->
        <Border Grid.Column="2" Grid.ColumnSpan="3" BorderThickness="0,0,0,1" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>

        <!--Overlay-->
        <Border x:Name="OverlayShowTopBorder" Grid.Column="0" Grid.ColumnSpan="6" Height="14.3" VerticalAlignment="Top" Style="{StaticResource OverlayStyle}"/>
        <Border x:Name="OverlayShowCenterBorder" Grid.Column="2" Grid.ColumnSpan="3" Height="21.4" VerticalAlignment="Center" Style="{StaticResource OverlayStyle}"/>
        <Border x:Name="OverlayShowBottomBorder" Grid.Column="0" Grid.ColumnSpan="6" Height="14.3" VerticalAlignment="Bottom" Style="{StaticResource OverlayStyle}"/>

    </Grid>
</UserControl>