<tool:ToolPage
    x:Class="Retouch_Photo2.Tools.Pages.AcrylicPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:hSVColorPickers="using:HSVColorPickers"
    xmlns:element="using:Retouch_Photo2.Element"
    xmlns:tool="using:Retouch_Photo2.Tools"
    mc:Ignorable="d">

    <ScrollViewer HorizontalScrollMode="Enabled" HorizontalScrollBarVisibility="Hidden" VerticalScrollMode="Disabled" VerticalScrollBarVisibility="Disabled">
        <StackPanel Orientation="Horizontal" Height="50" Padding="4">

            <TextBlock Text="FillColor:" Style="{StaticResource AppTextBlock}"/>
            <element:FillColorEllipseControl/>
            
            <TextBlock Text="TintOpacity:" Style="{StaticResource AppTextBlock}"/>
            <Border Width="70" Background="Transparent" Style="{StaticResource AppRoundedBorderStyle}">
                <hSVColorPickers:NumberPicker x:Name="TintOpacityPicker" Value="{x:Bind TintOpacityConverter(ViewModel.AcrylicTintOpacity),Mode=OneWay}" Unit="%" Width="Auto"/>
            </Border>
            
            <TextBlock Text="BlurAmount:" Style="{StaticResource AppTextBlock}"/>
            <Border Width="70" Background="Transparent" Style="{StaticResource AppRoundedBorderStyle}">
                <hSVColorPickers:NumberPicker x:Name="BlurAmountPicker" Value="{x:Bind BlurAmountConverter(ViewModel.AcrylicBlurAmount),Mode=OneWay}" Unit="dp" Width="Auto"/>
            </Border>

        </StackPanel>
    </ScrollViewer>

</tool:ToolPage>
