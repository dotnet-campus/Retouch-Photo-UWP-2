<UserControl
    x:Class="Retouch_Photo2.Menus.Layouts.ColorLayout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:menus="using:Retouch_Photo2.Menus"
    xmlns:hsvColorPicker="using:HSVColorPickers"
    mc:Ignorable="d"
    d:DesignHeight="200"
    d:DesignWidth="200"
    >

    <menus:MenuLayout x:Name="Layout">
        <menus:MenuLayout.ContentChild>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!--Head-->
                <menus:MenuTitle x:Name="_MenuTitle">
                    <menus:MenuTitle.Text>
                        Color
                    </menus:MenuTitle.Text>
                </menus:MenuTitle>

                <hsvColorPicker:ColorPicker x:Name="ColorPicker" Grid.Row="1" Background="Transparent"
                     Color="{x:Bind SelectionViewModel.Color,Mode=OneWay}"
                     FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}"/>
                
            </Grid>
        </menus:MenuLayout.ContentChild>        
    </menus:MenuLayout>
    
</UserControl>