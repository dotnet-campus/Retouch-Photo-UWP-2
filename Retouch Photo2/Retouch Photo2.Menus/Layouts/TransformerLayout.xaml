<UserControl
    x:Class="Retouch_Photo2.Menus.Layouts.TransformerLayout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:menus="using:Retouch_Photo2.Menus"
    xmlns:controls="using:Retouch_Photo2.Controls"
    xmlns:transformers="using:FanKit.Transformers"
    mc:Ignorable="d"
    d:DesignHeight="200"
    d:DesignWidth="200"
    >

    <UserControl.Resources>
        <!--Flyout-->
        <Flyout x:Name="_Flyout" Placement="Bottom" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}"/>
    </UserControl.Resources>


    <menus:MenuLayout x:Name="_Layout" Text="Transformer">

        <menus:MenuLayout.Icon>
            <transformers:Icon/>
        </menus:MenuLayout.Icon>

        <menus:MenuLayout.ContentChild>
            <controls:TransformerControl x:Name="TransformerControl"
                           Tool="{x:Bind TipViewModel.Tool,Mode=OneWay}"
                           DisabledRadian="{x:Bind SelectionViewModel.DsabledRadian,Mode=OneWay}"
                           Mode="{x:Bind SelectionViewModel.Mode,Mode=OneWay}"
                           Transformer="{x:Bind SelectionViewModel.Transformer,Mode=OneWay}" 
                        />
        </menus:MenuLayout.ContentChild>
        
    </menus:MenuLayout>
    
</UserControl>