<UserControl
    x:Class="Retouch_Photo2.Menus.Models.StyleMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:elements="using:Retouch_Photo2.Elements"
    xmlns:styles="using:Retouch_Photo2.Styles"
    mc:Ignorable="d"
    d:DesignWidth="200"
    d:DesignHeight="400"
    >


    <elements:Expander x:Name="_Expander">


        <elements:Expander.MainPage>
            <Border Margin="1,2" MinHeight="165" MaxHeight="300">                
                <GridView x:Name="StylesGridView" SelectionMode="None" IsItemClickEnabled="True" >

                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Width" Value="70"/>
                            <Setter Property="Height" Value="70"/>
                            <Setter Property="Margin" Value="1"/>
                            <Setter Property="Padding" Value="4,0"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                        </Style>
                    </GridView.ItemContainerStyle>

                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="styles:Style">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="36"/>
                                </Grid.RowDefinitions>
                               <styles:ShowControl Style2="{x:Bind}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind Name}" Grid.Row="1" TextTrimming="CharacterEllipsis" HorizontalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>

                </GridView>
            </Border>
        </elements:Expander.MainPage>


    </elements:Expander>

</UserControl>