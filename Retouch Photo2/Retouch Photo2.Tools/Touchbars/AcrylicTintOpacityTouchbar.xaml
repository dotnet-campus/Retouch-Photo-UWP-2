<UserControl
    x:Class="Retouch_Photo2.Tools.Touchbars.AcrylicTintOpacityTouchbar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tools="using:Retouch_Photo2.Tools"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="200"
    >

    <tools:TouchbarSlider x:Name="TouchbarSlider"
                    Number="{x:Bind NumberConverter(SelectionViewModel.AcrylicTintOpacity),Mode=OneWay}"
                    Value="{x:Bind ValueConverter(SelectionViewModel.AcrylicTintOpacity), Mode=OneWay}" 
                     />

</UserControl>