<Page
    x:Class="Retouch_Photo2.Tools.Pages.GeometryHeartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolsElements="using:Retouch_Photo2.Tools.Elements"
    xmlns:tools="using:Retouch_Photo2.Tools"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="400"
    >

    <StackPanel Orientation="Horizontal">

        <!--Spread-->
        <TextBlock Style="{StaticResource AppTextBlock}">
            Spread
        </TextBlock>
        <tools:TouchbarButton x:Name="SpreadTouchbarButton"
                      Number="{x:Bind SpreadNumberConverter(SelectionViewModel.GeometryHeartSpread),Mode=OneWay}"
                        >
            <tools:TouchbarButton.TouchbarSlider>
                <tools:TouchbarSlider x:Name="SpreadTouchbarSlider" 
                             Number="{x:Bind SpreadNumberConverter(SelectionViewModel.GeometryHeartSpread),Mode=OneWay}"
                             Value="{x:Bind SpreadValueConverter(SelectionViewModel.GeometryHeartSpread),Mode=OneWay}"
                             />
            </tools:TouchbarButton.TouchbarSlider>
        </tools:TouchbarButton>

        <ContentControl Width="4"/>

        <TextBlock Style="{StaticResource AppTextBlock}">
            Convert to curves
        </TextBlock>
        <toolsElements:ConvertToCurvesButton/>

        <ContentControl Width="4"/>
        
        <toolsElements:MoreCreateButton/>

    </StackPanel>
    
</Page>