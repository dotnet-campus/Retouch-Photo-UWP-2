<Page
    x:Class="Retouch_Photo2.Tools.Pages.GeometryDountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolsElements="using:Retouch_Photo2.Tools.Elements"
    xmlns:tools="using:Retouch_Photo2.Tools"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="400"
    >

    <ScrollViewer Style="{StaticResource AppHorizontalScrollViewer}">
        <StackPanel Orientation="Horizontal">

            <!--HoleRadius-->
            <tools:TouchbarButton x:Name="HoleRadiusTouchbarButton">
                <tools:TouchbarButton.CenterContent>
                    Hole Radius
                </tools:TouchbarButton.CenterContent>
                <tools:TouchbarButton.TouchbarSlider>
                    <tools:TouchbarSlider x:Name="HoleRadiusTouchbarSlider"
                    Number="{x:Bind HoleRadiusNumberConverter(SelectionViewModel.GeometryDountHoleRadius),Mode=OneWay}"
                    Value="{x:Bind HoleRadiusValueConverter(SelectionViewModel.GeometryDountHoleRadius), Mode=OneWay}" 
                     />
                </tools:TouchbarButton.TouchbarSlider>
            </tools:TouchbarButton>

            <ContentControl Width="4"/>

            <TextBlock Style="{StaticResource AppTextBlock}">
            Convert to curves
            </TextBlock>
            <toolsElements:ConvertToCurvesButton/>

            <ContentControl Width="4"/>

            <toolsElements:MoreCreateButton/>

        </StackPanel>
    </ScrollViewer>

</Page>