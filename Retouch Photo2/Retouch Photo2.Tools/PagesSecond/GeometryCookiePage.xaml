<Page
    x:Class="Retouch_Photo2.Tools.Pages.GeometryCookiePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolsElements="using:Retouch_Photo2.Tools.Elements"
    xmlns:tools="using:Retouch_Photo2.Tools"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="400"
    >

    <ScrollViewer Style="{StaticResource AppHorizontalScrollViewer}">
      <StackPanel Orientation="Horizontal">

        <!--InnerRadius-->
        <TextBlock Style="{StaticResource AppTextBlock}">
            Inner Radius
        </TextBlock>
        <tools:TouchbarButton x:Name="InnerRadiusTouchbarButton"
                      Number="{x:Bind InnerRadiusNumberConverter(SelectionViewModel.GeometryCookieInnerRadius),Mode=OneWay}"
                       >
            <tools:TouchbarButton.TouchbarSlider>
                <tools:TouchbarSlider x:Name="InnerRadiusTouchbarSlider"
                    Number="{x:Bind InnerRadiusNumberConverter(SelectionViewModel.GeometryCookieInnerRadius),Mode=OneWay}"
                    Value="{x:Bind InnerRadiusValueConverter(SelectionViewModel.GeometryCookieInnerRadius), Mode=OneWay}" 
                     />
            </tools:TouchbarButton.TouchbarSlider>
        </tools:TouchbarButton>

        <ContentControl Width="4"/>

        <!--SweepAngle-->
        <TextBlock Style="{StaticResource AppTextBlock}">
            Sweep Angle
        </TextBlock>
        <tools:TouchbarButton x:Name="SweepAngleTouchbarButton"
                      Number="{x:Bind SweepAngleNumberConverter(SelectionViewModel.GeometryCookieSweepAngle),Mode=OneWay}"
                       >
            <tools:TouchbarButton.TouchbarSlider>
                <tools:TouchbarSlider x:Name="SweepAngleTouchbarSlider"
                    Number="{x:Bind SweepAngleNumberConverter(SelectionViewModel.GeometryCookieSweepAngle),Mode=OneWay}"
                    Value="{x:Bind SweepAngleValueConverter(SelectionViewModel.GeometryCookieSweepAngle), Mode=OneWay}" 
                     />
            </tools:TouchbarButton.TouchbarSlider>
        </tools:TouchbarButton>

        <ContentControl Width="4"/>

        <TextBlock Style="{StaticResource AppTextBlock}">
            Convert to curves
        </TextBlock>
        <toolsElements:ConvertToCurvesButton/>

        <ContentControl Width="4"/>

        <toolsElements:MoreCreateButton/>

    </StackPanel>
    </ScrollViewer>
    
</Page>