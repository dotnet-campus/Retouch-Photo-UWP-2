<Page
    x:Class="Retouch_Photo2.Tools.Models.BrushTool"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:hSVColorPickers="using:HSVColorPickers"
    xmlns:brushs="using:Retouch_Photo2.Brushs"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="400"
    >


    <Page.Resources>

        <!--Flyout-->
        <Flyout x:Name="StopsFlyout" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}">
            <brushs:StopsPicker x:Name="StopsPicker" Width="320"/>
        </Flyout>

        <!--Storyboard-->
        <Storyboard x:Name="EaseStoryboard">
            <ColorAnimation Duration="1000" From="{ThemeResource SystemBaseHighColor}" To="{ThemeResource AppBorderBrushColor}" Storyboard.TargetProperty="Color" Storyboard.TargetName="BrushTypeBorderBorderBrush" d:IsOptimized="True">
                <ColorAnimation.EasingFunction>
                    <BounceEase EasingMode="EaseOut"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>
        </Storyboard>

    </Page.Resources>


    <ScrollViewer Style="{StaticResource AppHorizontalScrollViewer}">
        <StackPanel Orientation="Horizontal">

            <!--FillOrStroke-->
            <TextBlock x:Name="FillOrStrokeTextBlock" Style="{StaticResource AppTextBlock}"/>
            <brushs:FillOrStrokeControl x:Name="FillOrStrokeControl"
                 FillOrStroke="{x:Bind SelectionViewModel.FillOrStroke, Mode=OneWay}"
                />
           
            <ContentControl Width="4"/>

            <!--BrushType-->
            <TextBlock x:Name="BrushTypeTextBlock" Style="{StaticResource AppTextBlock}"/>
            <brushs:BrushTypeControl x:Name="BrushTypeControl" 
                 FillOrStroke="{x:Bind SelectionViewModel.FillOrStroke, Mode=OneWay}"
                 FillBrush="{x:Bind SelectionViewModel.FillBrush,Mode=OneWay}" 
                 StrokeBrush="{x:Bind SelectionViewModel.StrokeBrush,Mode=OneWay}" 
                 />
           
            <ContentControl Width="4"/>

            <!--ShowControl-->
            <TextBlock x:Name="BrushTextBlock" Style="{StaticResource AppTextBlock}"/>
            <brushs:ShowControl x:Name="ShowControl" 
                 FillOrStroke="{x:Bind SelectionViewModel.FillOrStroke, Mode=OneWay}"
                 FillBrush="{x:Bind SelectionViewModel.FillBrush,Mode=OneWay}" 
                 StrokeBrush="{x:Bind SelectionViewModel.StrokeBrush,Mode=OneWay}" 
                 />

        </StackPanel>
    </ScrollViewer>

</Page>