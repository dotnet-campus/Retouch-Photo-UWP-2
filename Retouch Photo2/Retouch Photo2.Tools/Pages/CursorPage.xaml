        </Border>

        <ContentControl Width="12"/>

        <!--Control-->
        <TextBlock Text="Control:" Visibility="Collapsed" Style="{StaticResource AppTextBlock}"/>
        <elements:OnOffSwitch OnContent="None" OffContent="Ratio" IsOn="{x:Bind KeyboardViewModel.IsRatio,Mode=TwoWay}">
            <ToolTipService.ToolTip>
                <ToolTip Content="Ratio scaling" Placement="Top" IsOpen="{x:Bind TipViewModel.IsCursorToolOpen,Mode=OneWay}" Style="{StaticResource AppToolTip}"/>
            </ToolTipService.ToolTip>  
        </elements:OnOffSwitch>
        
        <ContentControl Width="12"/>
        
        <elements:OnOffSwitch OnContent="None" OffContent="Center" IsOn="{x:Bind KeyboardViewModel.IsCenter,Mode=TwoWay}">
            <ToolTipService.ToolTip>
                <ToolTip Content="Center scaling" Placement="Top" IsOpen="{x:Bind TipViewModel.IsCursorToolOpen,Mode=OneWay}" Style="{StaticResource AppToolTip}"/>
            </ToolTipService.ToolTip>
        </elements:OnOffSwitch>

        <AppBarSeparator/>

        <!--Multi-Mode-->
        <TextBlock Text="Multi-Mode:" Visibility="Collapsed" Style="{StaticResource AppTextBlock}"/>
        <elements:CompositeModeControl Mode="{x:Bind KeyboardViewModel.CompositeMode,Mode=TwoWay}">
            <ToolTipService.ToolTip>
                <ToolTip Content="Multi-Mode" Placement="Top" IsOpen="{x:Bind TipViewModel.IsCursorToolOpen,Mode=OneWay}" Style="{StaticResource AppToolTip}"/>
            </ToolTipService.ToolTip>        
        </elements:CompositeModeControl>
        
        <ContentControl Width="12"/>

        <!--More-->
        <Border Background="Transparent" Style="{StaticResource AppCircleBorderStyle}">
            <Button x:Name="MoreButton" BorderThickness="0" BorderBrush="Transparent" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <FontIcon Glyph="&#xE10C;" FontFamily="{ThemeResource SymbolThemeFontFamily}"/>
            </Button>
        </Border>
        
    </StackPanel>
</Page>
