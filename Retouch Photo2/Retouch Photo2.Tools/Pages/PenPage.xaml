<Page
    x:Class="Retouch_Photo2.Tools.Pages.PenPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:elements="using:Retouch_Photo2.Elements"
    xmlns:toolsElements="using:Retouch_Photo2.Tools.Elements"
    xmlns:toolElements="using:Retouch_Photo2.Tools.Elements"
    mc:Ignorable="d"
    >

    <Page.Resources>
        <!--Flyout-->
        <Flyout x:Name="Flyout" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}">
            <toolElements:PenFlyout x:Name="_penFlyout"/>
        </Flyout>
    </Page.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!--Add or Nodes-->
        <elements:OnOffSwitch OnContent="Add" OffContent="Move" IsOn="{x:Bind SelectionViewModel.IsPenToolNodesMode, Mode=TwoWay}">
            <ToolTipService.ToolTip>
                <ToolTip Content="Add or Nodes" Placement="Top" IsOpen="{x:Bind IsOpenConverter(TipViewModel.IsOpen),Mode=OneWay}" Style="{StaticResource AppToolTip}"/>
            </ToolTipService.ToolTip>
        </elements:OnOffSwitch>

        
        <!--Add-->
        <StackPanel Grid.Column="1" Orientation="Horizontal" Visibility="{x:Bind FalseToVisibilityConverter(SelectionViewModel.IsPenToolNodesMode),Mode=OneWay}">

            <elements:ExpandAppBarSapce/>

            <TextBlock Style="{StaticResource AppTextBlock}">
                FillColor
            </TextBlock>
            <toolsElements:FillColorEllipseButton/>

            <elements:ExpandAppBarSapce/>

            <TextBlock Style="{StaticResource AppTextBlock}">
                StrokeColor
            </TextBlock>
            <toolsElements:StrokeColorEllipseButton/>

            <elements:ExpandAppBarSapce/>

            <TextBlock Style="{StaticResource AppTextBlock}">
                StrokeWidth
            </TextBlock>
            <toolsElements:StrokeWidthButton/>

        </StackPanel>

        
        <!--Nodes-->
        <StackPanel Grid.Column="1" Orientation="Horizontal" Visibility="{x:Bind TrueToVisibilityConverter(SelectionViewModel.IsPenToolNodesMode),Mode=OneWay}">

            <elements:ExpandAppBarSapce/>

            <TextBlock Style="{StaticResource AppTextBlock}">
                Remove
            </TextBlock>
            <elements:ExpandAppbarButton x:Name="RemoveButton">
                <ToolTipService.ToolTip>
                    <ToolTip Content="Remove the current point" VerticalOffset="40" Placement="Top" IsOpen="{x:Bind NodesIsOpenConverter(TipViewModel.IsOpen),Mode=OneWay}" Style="{StaticResource AppToolTip}"/>
                </ToolTipService.ToolTip>
                <elements:ExpandAppbarButton.CenterContent>
                    <FontIcon Glyph="&#xE107;" FontFamily="Segoe MDL2 Assets" Foreground="{ThemeResource AppText}"/>
                </elements:ExpandAppbarButton.CenterContent>
            </elements:ExpandAppbarButton>

            <elements:ExpandAppBarSapce/>

            <TextBlock Style="{StaticResource AppTextBlock}">
                Insert
            </TextBlock>
            <elements:ExpandAppbarButton x:Name="AddButton">
                <ToolTipService.ToolTip>
                    <ToolTip Content="Insert from current point" Placement="Top" IsOpen="{x:Bind NodesIsOpenConverter(TipViewModel.IsOpen),Mode=OneWay}" Style="{StaticResource AppToolTip}"/>
                </ToolTipService.ToolTip>
                <elements:ExpandAppbarButton.CenterContent>
                    <FontIcon Glyph="&#xE109;" FontFamily="Segoe MDL2 Assets" Foreground="{ThemeResource AppText}"/>
                </elements:ExpandAppbarButton.CenterContent>
            </elements:ExpandAppbarButton>

            <elements:ExpandAppBarSeparator/>

            <TextBlock Style="{StaticResource AppTextBlock}">
                Sharp
            </TextBlock>
            <elements:ExpandAppbarButton x:Name="SharpButton">
                <ToolTipService.ToolTip>
                    <ToolTip Content="Sharp curves" VerticalOffset="40" Placement="Top" IsOpen="{x:Bind NodesIsOpenConverter(TipViewModel.IsOpen),Mode=OneWay}" Style="{StaticResource AppToolTip}"/>
                </ToolTipService.ToolTip>
                <elements:ExpandAppbarButton.CenterContent>
                    <PathIcon Foreground="{ThemeResource AppText}">
