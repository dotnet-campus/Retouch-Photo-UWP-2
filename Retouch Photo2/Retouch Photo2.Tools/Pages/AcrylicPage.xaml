<Page
    x:Class="Retouch_Photo2.Tools.Pages.AcrylicPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolsElements="using:Retouch_Photo2.Tools.Elements"
    xmlns:elements="using:Retouch_Photo2.Elements"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="400"
    >

    <StackPanel Orientation="Horizontal">

        <!--TintColor-->
        <TextBlock Text="TintColor:" Style="{StaticResource AppTextBlock}"/>
        <toolsElements:FillColorEllipseButton/>

        <ContentControl Width="12"/>
        
        <!--TintOpacity-->
        <TextBlock Text="TintOpacity:" Style="{StaticResource AppTextBlock}"/>
        <elements:TouchbarButton x:Name="TintOpacityTouchbarButton"
                      Number="{x:Bind TintOpacityNumberConverter(SelectionViewModel.AcrylicTintOpacity),Mode=OneWay}"
                      />

        <AppBarSeparator/>

        <!--BlurAmount-->
        <TextBlock Text="BlurAmount:" Style="{StaticResource AppTextBlock}"/>
        <elements:TouchbarButton x:Name="BlurAmountTouchbarButton"
                      Number="{x:Bind BlurAmountNumberConverter(SelectionViewModel.AcrylicBlurAmount),Mode=OneWay}"
                      />
        
    </StackPanel>
</Page>