<Page
    x:Class="Retouch_Photo2.Tools.Pages.AcrylicPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pagesDrawPages="using:Retouch_Photo2.Pages.DrawPages"
    xmlns:hSVColorPickers="using:HSVColorPickers"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="400"
    >

    <StackPanel Orientation="Horizontal">

        <TextBlock Text="FillColor:" Style="{StaticResource AppTextBlock}"/>
        <pagesDrawPages:FillColorEllipseButton/>
        
        <AppBarSeparator/>

        <TextBlock Text="TintOpacity:" Style="{StaticResource AppTextBlock}"/>
        <Border Width="70" Height="40" Background="Transparent" Style="{StaticResource AppRoundedBorderStyle}">
            <hSVColorPickers:NumberPicker x:Name="TintOpacityPicker" Value="{x:Bind TintOpacityConverter(SelectionViewModel.AcrylicTintOpacity),Mode=OneWay}" Unit="%" Width="Auto"/>
        </Border>
        
        <AppBarSeparator/>

        <TextBlock Text="BlurAmount:" Style="{StaticResource AppTextBlock}"/>
        <Border Width="70" Height="40" Background="Transparent" Style="{StaticResource AppRoundedBorderStyle}">
            <hSVColorPickers:NumberPicker x:Name="BlurAmountPicker" Value="{x:Bind BlurAmountConverter(SelectionViewModel.AcrylicBlurAmount),Mode=OneWay}" Unit="dp" Width="Auto"/>
        </Border>
        
    </StackPanel>
</Page>