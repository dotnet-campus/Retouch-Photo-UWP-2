<Page
    x:Class="Retouch_Photo2.Tools.Models.PatternGridTool"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:hsvcolorpickers="using:HSVColorPickers"
    xmlns:elements="using:Retouch_Photo2.Elements"
    xmlns:toolsElements="using:Retouch_Photo2.Tools.Elements"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="400"
    >


    <ScrollViewer Style="{StaticResource AppHorizontalScrollViewerStyle}">
        <StackPanel Orientation="Horizontal">

            <!--Type-->
            <TextBlock x:Name="TypeTextBlock" Style="{StaticResource AppTextBlockStyle}"/>
            <toolsElements:PatternGridTypeComboBox x:Name="PatternGridTypeComboBox"
                 GridType="{x:Bind SelectionViewModel.PatternGridType, Mode=OneWay}"
                />

            <ContentControl Width="4"
                            Visibility="{x:Bind HorizontalStepVisibilityConverter(SelectionViewModel.PatternGridType), Mode=OneWay}"/>

            <!--Horizontal-->
            <elements:TouchbarButton x:Name="HorizontalStepTouchbarButton"
                            Visibility="{x:Bind HorizontalStepVisibilityConverter(SelectionViewModel.PatternGridType), Mode=OneWay}">
                <elements:TouchbarButton.TouchbarPicker>
                    <hsvcolorpickers:NumberPicker x:Name="HorizontalStepTouchbarPicker" ButtonStyle="{StaticResource AppNumberTouchbarButtonStyle}" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}"
                             Value="{x:Bind Converter(SelectionViewModel.PatternGridHorizontalStep), Mode=OneWay}"/>
                </elements:TouchbarButton.TouchbarPicker>
                <elements:TouchbarButton.TouchbarSlider>
                    <elements:TouchbarSlider x:Name="HorizontalStepTouchbarSlider" 
                             Value="{x:Bind SelectionViewModel.PatternGridHorizontalStep, Mode=OneWay}"/>
                </elements:TouchbarButton.TouchbarSlider>
            </elements:TouchbarButton>

            <ContentControl Width="4"
                            Visibility="{x:Bind VerticalStepVisibilityConverter(SelectionViewModel.PatternGridType), Mode=OneWay}"/>

            <!--Vertical-->
            <elements:TouchbarButton x:Name="VerticalStepTouchbarButton"
                            Visibility="{x:Bind VerticalStepVisibilityConverter(SelectionViewModel.PatternGridType), Mode=OneWay}">
                <elements:TouchbarButton.TouchbarPicker>
                    <hsvcolorpickers:NumberPicker x:Name="VerticalStepTouchbarPicker" ButtonStyle="{StaticResource AppNumberTouchbarButtonStyle}" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}"
                             Value="{x:Bind Converter(SelectionViewModel.PatternGridVerticalStep), Mode=OneWay}"/>
                </elements:TouchbarButton.TouchbarPicker>
                <elements:TouchbarButton.TouchbarSlider>
                    <elements:TouchbarSlider x:Name="VerticalStepTouchbarSlider" 
                             Value="{x:Bind SelectionViewModel.PatternGridVerticalStep, Mode=OneWay}"/>
                </elements:TouchbarButton.TouchbarSlider>
            </elements:TouchbarButton>

        </StackPanel>
    </ScrollViewer>

</Page>