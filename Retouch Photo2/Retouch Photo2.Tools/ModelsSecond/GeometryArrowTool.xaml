<Page
    x:Class="Retouch_Photo2.Tools.Models.GeometryArrowTool"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolsElements="using:Retouch_Photo2.Tools.Elements"
    xmlns:tools="using:Retouch_Photo2.Tools"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="400"
    >

    <ScrollViewer Style="{StaticResource AppHorizontalScrollViewer}">
        <StackPanel Orientation="Horizontal">

            <!--Width-->
            <tools:TouchbarButton x:Name="ValueTouchbarButton">
                <tools:TouchbarButton.TouchbarSlider>
                    <tools:TouchbarSlider x:Name="ValueTouchbarSlider"
                    Number="{x:Bind ValueNumberConverter(SelectionViewModel.GeometryArrowValue),Mode=OneWay}"
                    Value="{x:Bind ValueValueConverter(SelectionViewModel.GeometryArrowValue), Mode=OneWay}" 
                     />
                </tools:TouchbarButton.TouchbarSlider>
            </tools:TouchbarButton>

            <ContentControl Width="4"/>

            <TextBlock x:Name="LeftTailTextBlock" Style="{StaticResource AppTextBlock}"/>
            <Border Style="{StaticResource AppRoundedBorderStyle}">
                <ComboBox x:Name="LeftTailComboBox" VerticalAlignment="Stretch" BorderThickness="0" BorderBrush="Transparent" Background="Transparent"
                  SelectedIndex="{x:Bind TailToIndexConverter(SelectionViewModel.GeometryArrowLeftTail),Mode=OneWay}" 
                  >
                    <ComboBoxItem x:Name="LeftTailNoneComboBoxItem"/>
                    <ComboBoxItem x:Name="LeftTailArrowComboBoxItem"/>
                </ComboBox>
            </Border>

            <ContentControl Width="4"/>

            <TextBlock x:Name="RightTailTextBlock" Style="{StaticResource AppTextBlock}"/>
            <Border Style="{StaticResource AppRoundedBorderStyle}">
                <ComboBox x:Name="RightTailComboBox" VerticalAlignment="Stretch" BorderThickness="0" BorderBrush="Transparent" Background="Transparent"
                  SelectedIndex="{x:Bind TailToIndexConverter(SelectionViewModel.GeometryArrowRightTail),Mode=OneWay}" 
                  >
                    <ComboBoxItem x:Name="RightTailNoneComboBoxItem"/>
                    <ComboBoxItem x:Name="RightTailArrowComboBoxItem"/>
                </ComboBox>
            </Border>

            <ContentControl Width="4"/>

            <TextBlock x:Name="ConvertTextBlock" Style="{StaticResource AppTextBlock}"/>
            <toolsElements:ConvertToCurvesButton/>

            <ContentControl Width="4"/>

            <toolsElements:MoreCreateButton/>

        </StackPanel>
    </ScrollViewer>

</Page>