<UserControl
    x:Class="Retouch_Photo2.Controls.EffectsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:effects="using:Retouch_Photo2.Effects"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*" MinHeight="165"/>
        </Grid.RowDefinitions>


        <ItemsControl x:Name="ItemsControl" Grid.ColumnSpan="3" Grid.RowSpan="2">
        </ItemsControl>


        <Button x:Name="BackButton" Grid.Column="0" Style="{ThemeResource NavigationBackButtonNormalStyle}">
            <FontIcon Glyph="&#xE0A6;" FontFamily="Segoe MDL2 Assets" Foreground="{ThemeResource AppText}"/>
        </Button>
        <Button x:Name="ResetButton" Grid.Column="2" Style="{ThemeResource NavigationBackButtonNormalStyle}">
            <FontIcon Glyph="&#xE149;" FontFamily="Segoe MDL2 Assets" Foreground="{ThemeResource AppText}"/>
        </Button>
        <Border x:Name="Frame" Grid.ColumnSpan="3" Grid.Row="1" Background="Transparent">
            <!--Frame-->
        </Border>

    </Grid>
</UserControl>
