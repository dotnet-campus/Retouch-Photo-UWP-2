<UserControl
    x:Class="Retouch_Photo2.Controls.TransformerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:transformers="using:FanKit.Transformers"
    xmlns:pickers="using:HSVColorPickers"
    xmlns:menus="using:Retouch_Photo2.Menus"
    xmlns:elements="using:Retouch_Photo2.Elements"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="200"
    >


    <UserControl.Resources>
        <!--Storyboard-->
        <Storyboard x:Name="XEaseStoryboard">
            <ColorAnimation From="{ThemeResource SystemBaseHighColor}" To="{ThemeResource AppBorderBrushColor}" Storyboard.TargetProperty="Color" Storyboard.TargetName="XBorderBorderBrush" d:IsOptimized="True">
                <ColorAnimation.EasingFunction>
                    <BounceEase EasingMode="EaseOut"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>
        </Storyboard>
        <Storyboard x:Name="YEaseStoryboard">
            <ColorAnimation From="{ThemeResource SystemBaseHighColor}" To="{ThemeResource AppBorderBrushColor}" Storyboard.TargetProperty="Color" Storyboard.TargetName="YBorderBorderBrush" d:IsOptimized="True">
                <ColorAnimation.EasingFunction>
                    <BounceEase EasingMode="EaseOut"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>
        </Storyboard>
    </UserControl.Resources>

    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*" MinHeight="165"/>
        </Grid.RowDefinitions>

        <!--Head-->
        <menus:MenuTitle x:Name="_MenuTitle">
            <menus:MenuTitle.Text>
                Transformer
            </menus:MenuTitle.Text>
        </menus:MenuTitle>

        <Grid x:Name="FitstGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0" Style="{StaticResource AppTextBlock}">
                Width
            </TextBlock>
            <Border Grid.Column="0" Grid.Row="1" Background="Transparent" Margin="2,0" Style="{StaticResource AppRoundedBorderStyle}">
                <ToolTipService.ToolTip>
                    <ToolTip Content="Width" Placement="Left" IsOpen="{x:Bind IsOpenConverter(TipViewModel.IsOpen),Mode=OneWay}" Style="{StaticResource AppToolTip}"/>
                </ToolTipService.ToolTip>
                <pickers:NumberPicker x:Name="WPicker" Width="Auto" Height="Auto" Unit="dp" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}"/>
            </Border>

            <TextBlock Grid.Column="2" Grid.Row="0" Style="{StaticResource AppTextBlock}">
                Height
            </TextBlock>
            <Border Grid.Column="2" Grid.Row="1" Background="Transparent" Margin="2,0" Style="{StaticResource AppRoundedBorderStyle}">
                <ToolTipService.ToolTip>
                    <ToolTip Content="Height" Placement="Right" IsOpen="{x:Bind IsOpenConverter(TipViewModel.IsOpen),Mode=OneWay}" Style="{StaticResource AppToolTip}"/>
                </ToolTipService.ToolTip>
                <pickers:NumberPicker x:Name="HPicker" Width="Auto" Height="Auto" Unit="dp" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}"/>
            </Border>

            <ToggleButton x:Name="RatioToggleControl" Grid.Column="1" Grid.Row="1" IsChecked="{x:Bind IsRatio,Mode=TwoWay}" Style="{StaticResource AppCircleToggleButtonStyle}">
                <ToolTipService.ToolTip>
                    <ToolTip Content="Ratio Scaling" Placement="Top" IsOpen="{x:Bind IsOpenConverter(TipViewModel.IsOpen),Mode=OneWay}" Style="{StaticResource AppToolTip}"/>
                </ToolTipService.ToolTip>
                    <FontIcon Glyph="&#x1F512;" FontSize="18" FontFamily="Segoe UI Symbol"/>
            </ToggleButton>
            
            <!--/////////////////////////////////////////////////////////-->

            <TextBlock Grid.Column="0" Grid.Row="2" Style="{StaticResource AppTextBlock}">
                Rotate
            </TextBlock>
            <Border Grid.Column="0" Grid.Row="3" Background="Transparent" Margin="2,0" Style="{StaticResource AppRoundedBorderStyle}">
                <ToolTipService.ToolTip>
                    <ToolTip Content="Rotate" Placement="Left" IsOpen="{x:Bind IsOpenConverter(TipViewModel.IsOpen),Mode=OneWay}" Style="{StaticResource AppToolTip}"/>
                </ToolTipService.ToolTip>
                <pickers:NumberPicker x:Name="RPicker" Width="Auto" Height="Auto" Unit="º" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}"/>
            </Border>

            <TextBlock Grid.Column="2" Grid.Row="2" Style="{StaticResource AppTextBlock}">
                Skew
            </TextBlock>
            <Border Grid.Column="2" Grid.Row="3" Background="Transparent" Margin="2,0" Style="{StaticResource AppRoundedBorderStyle}">
                <ToolTipService.ToolTip>
                    <ToolTip Content="Skew" Placement="Right" IsOpen="{x:Bind IsOpenConverter(TipViewModel.IsOpen),Mode=OneWay}" Style="{StaticResource AppToolTip}"/>
                </ToolTipService.ToolTip>
                <pickers:NumberPicker x:Name="SPicker" Width="Auto" Height="Auto" Unit="º" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}"/>
            </Border>

            <!--/////////////////////////////////////////////////////////-->

            <TextBlock Grid.Column="0" Grid.Row="4" Style="{StaticResource AppTextBlock}">
                X
            </TextBlock>
            <Border Grid.Column="0" Grid.Row="5" Background="Transparent" Margin="2,0" Style="{StaticResource AppRoundedBorderStyle}">
                <ToolTipService.ToolTip>
                    <ToolTip Content="X-axis" Placement="Left" IsOpen="{x:Bind IsOpenConverter(TipViewModel.IsOpen),Mode=OneWay}" Style="{StaticResource AppToolTip}"/>
                </ToolTipService.ToolTip>
                <Border.BorderBrush>
                    <SolidColorBrush x:Name="XBorderBorderBrush" Color="{ThemeResource AppBorderBrushColor}"/>
                </Border.BorderBrush>
                <pickers:NumberPicker x:Name="XPicker" Width="Auto" Height="Auto" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}"/>
            </Border>

            <TextBlock Grid.Column="2" Grid.Row="4" Style="{StaticResource AppTextBlock}">
                Y
            </TextBlock>
            <Border Grid.Column="2" Grid.Row="5" Background="Transparent" Margin="2,0" Style="{StaticResource AppRoundedBorderStyle}">
                <ToolTipService.ToolTip>
                    <ToolTip Content="Y-axis" Placement="Right" IsOpen="{x:Bind IsOpenConverter(TipViewModel.IsOpen),Mode=OneWay}" Style="{StaticResource AppToolTip}"/>
                </ToolTipService.ToolTip>
                <Border.BorderBrush>
                    <SolidColorBrush x:Name="YBorderBorderBrush" Color="{ThemeResource AppBorderBrushColor}"/>
                </Border.BorderBrush>
                <pickers:NumberPicker x:Name="YPicker" Width="Auto" Height="Auto" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}"/>
            </Border>

            <!--/////////////////////////////////////////////////////////-->

            <transformers:IndicatorControl x:Name="IndicatorControl"
                     Grid.Row="6" Grid.ColumnSpan="3"                                                                                    
                     Background="{ThemeResource AppFill}"
                     BorderBrush="{ThemeResource AppStroke}"
                    >
                <ToolTipService.ToolTip>
                    <ToolTip Content="Indicator" Placement="Top" IsOpen="{x:Bind IsOpenConverter(TipViewModel.IsOpen),Mode=OneWay}" Style="{StaticResource AppToolTip}"/>
                </ToolTipService.ToolTip>
            </transformers:IndicatorControl>

            <elements:IconRoundedBorderButton x:Name="RemoteButton" Margin="2" Grid.ColumnSpan="3" Grid.Row="7">
                <elements:IconRoundedBorderButton.Text>
                    Position Remote
                </elements:IconRoundedBorderButton.Text>
                <elements:IconRoundedBorderButton.Icon>
                    <FontIcon FontSize="14" Glyph="&#xE09B;" FontFamily="{ThemeResource SymbolThemeFontFamily}"/>
                </elements:IconRoundedBorderButton.Icon>
            </elements:IconRoundedBorderButton>

        </Grid>


        <Border x:Name="SecondGird" Padding="2" Grid.Row="1">
            <transformers:RemoteControl x:Name="RemoteControl" 
                     Width="Auto" Height="Auto"                                               
                     Background="{ThemeResource AppForeground}"
                     BorderBrush="{ThemeResource AppBorderBrush}"
                     Foreground="{ThemeResource AppText}"
                      />
        </Border>


    </Grid>
</UserControl>
