<UserControl
    x:Class="Retouch_Photo2.Controls.AdjustmentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:adjustments="using:Retouch_Photo2.Adjustments"
    xmlns:menus="using:Retouch_Photo2.Menus"
    mc:Ignorable="d"
    d:DesignWidth="200"
    d:DesignHeight="400"
    >

    
    <UserControl.Resources>

        <!--Flyout-->
        <Flyout x:Name="AdjustmentPageFlyout" Placement="Right" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}">
            <ListView x:Name="AdjustmentPageListView" Width="190" MaxHeight="400" SelectionMode="None" IsItemClickEnabled="True">
               
                <ListView.Header>
                    <TextBlock Style="{StaticResource AppTextBlock}">
                        Select a adjustment
                    </TextBlock>
                </ListView.Header>
                
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="adjustments:IAdjustmentPage">
                        <ContentPresenter Content="{x:Bind Icon}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
                
            </ListView>
        </Flyout>

        <!--DataTemplate-->
        <DataTemplate x:Key="DataTemplate" x:DataType="adjustments:IAdjustment">
            <Border Margin="2" Style="{StaticResource AppRoundedBorderStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>

                    <!--Adjustment-->
                    <ContentPresenter Content="{x:Bind Icon}"/>

                    <!--Edit-->
                    <Button x:Name="EditButton" Grid.Column="1" BorderThickness="0" BorderBrush="Transparent" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                     Visibility="{x:Bind PageVisibility}" Tapped="EditButton_Tapped">
                        <FontIcon FontSize="14" Glyph="&#xEC88;" FontFamily="{ThemeResource SymbolThemeFontFamily}" Foreground="{ThemeResource AppText}"/>
                    </Button>

                    <!--Remove-->
                    <Button x:Name="RemoveButton" Grid.Column="2" BorderThickness="0" BorderBrush="Transparent" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                        Tapped="RemoveButton_Tapped">
                        <FontIcon FontSize="12" Glyph="&#xE106;" FontFamily="{ThemeResource SymbolThemeFontFamily}" Foreground="{ThemeResource AppText}"/>
                    </Button>

                </Grid>
            </Border>
        </DataTemplate>

    </UserControl.Resources>


    <Grid>

        <!--VisualState-->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup">

                <!--Normal-->
                <VisualState x:Name="Normal"/>

                <!--Disable-->
                <VisualState x:Name="Disable">
                    <VisualState.Setters>
                        
                        <Setter Target = "AddButton.IsEnabled" Value="false"/>
                        <Setter Target = "FilterButton.IsEnabled" Value="false"/>
                        
                        <Setter Target = "TextBlock.Visibility" Value="Visible"/>

                    </VisualState.Setters>
                </VisualState>

                
                <!--ZeroAdjustments-->
                <VisualState x:Name="ZeroAdjustments">
                    <VisualState.Setters >

                        
                        <Setter Target = "TextBlock.Visibility" Value="Visible"/>
                        
                    </VisualState.Setters>
                </VisualState>
                
                <!--Adjustments-->
                <VisualState x:Name="Adjustments">
                    <VisualState.Setters >
                        
                        <Setter Target = "ItemsControl.Visibility" Value="Visible"/>
                        
                    </VisualState.Setters>
                </VisualState>

                
                <!--Edit-->
                <VisualState x:Name="Edit">
                    <VisualState.Setters >

                        <Setter Target = "_MenuTitle.IsSecondPage" Value="true"/>
                        <Setter Target = "_MenuTitle.ResetButtonVisibility" Value="Visible"/>

                        <Setter Target = "AdjustmentPageBorder.Visibility" Value="Visible"/>
                        
                        <Setter Target = "AddButton.Visibility" Value="Collapsed"/>
                        <Setter Target = "FilterButton.Visibility" Value="Collapsed"/>

                    </VisualState.Setters>
                </VisualState>
                
                <!--Filters-->
                <VisualState x:Name="Filters">
                    <VisualState.Setters >

                        <Setter Target = "_MenuTitle.IsSecondPage" Value="true"/>
                        
                        <Setter Target = "FilterListView.Visibility" Value="Visible"/>

                        <Setter Target = "AddButton.Visibility" Value="Collapsed"/>
                        <Setter Target = "FilterButton.Visibility" Value="Collapsed"/>
                     
                    </VisualState.Setters>
                </VisualState>
                
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        
        
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*" MinHeight="165"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Head-->
        <menus:MenuTitle x:Name="_MenuTitle">
            <menus:MenuTitle.Text>
                Adjustment
            </menus:MenuTitle.Text>
        </menus:MenuTitle>

        <!--Body-->
        <ItemsControl x:Name="ItemsControl" Visibility="Collapsed" Grid.Row="1" VerticalAlignment="Top" ItemTemplate="{StaticResource DataTemplate}"/>
        <TextBlock x:Name="TextBlock" Visibility="Collapsed" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{ThemeResource AppTextBlock}">
            No Adjustment
        </TextBlock>
        <Border x:Name="AdjustmentPageBorder" Visibility="Collapsed" Grid.Row="1" Background="Transparent">

            <!--Visibility:Show-->
            <animations:Implicit.ShowAnimations>
                <animations:TranslationAnimation Duration="0:0:0.4" From="0,25,0" To="0,0,0"/>
                <animations:OpacityAnimation Duration="0:0:0.5" From="0.0" To="1.0"/>
            </animations:Implicit.ShowAnimations>

            <!--Frame-->
        </Border>
        <ListView x:Name="FilterListView" Visibility="Collapsed" Grid.Row="1" MaxHeight="300" Padding="4,0"
                          SelectionMode="None" IsItemClickEnabled="True">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="{ThemeResource AppForeground}" />
                    <Setter Property="Margin" Value="2" />
                    <Setter Property="Padding" Value="8,0" />
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                    <Setter Property="VerticalAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="adjustments:Filter">
                    <TextBlock Text="{x:Bind Name}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!--Foot-->
        <Button x:Name="AddButton" Grid.Row="3" Margin="2" Tag="Add Adjustment" Style="{StaticResource AppTagRoundedButton}">
            <FontIcon FontSize="18" Glyph="&#xE109;" FontFamily="{ThemeResource SymbolThemeFontFamily}"/>
        </Button>
        <Button x:Name="FilterButton" Grid.Row="4" Margin="2" Tag="Default Filters" Style="{StaticResource AppTagRoundedButton}">
            <FontIcon FontSize="14" Glyph="&#xE09B;" FontFamily="{ThemeResource SymbolThemeFontFamily}"/>
        </Button>        

    </Grid>
    
</UserControl>