<UserControl
    x:Class="Retouch_Photo2.Controls.LayersControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="800"
    d:DesignWidth="200"
    >

    <UserControl.Resources>
        <!--Flyout-->
        <Flyout x:Name="AddImageFlyout" Placement="Left" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}">
            <StackPanel Width="200">

                <TextBlock FontSize="22" FontWeight="Light" Style="{StaticResource AppTextBlock}">
                    Add
                </TextBlock>
                
                <Button x:Name="_PhotoButton" Style="{StaticResource AppTagRoundedButton}">
                    <Button.Tag>
                        From Pictures
                    </Button.Tag>
                    <FontIcon Grid.Column="1" Glyph="&#xEB9F;" FontSize="20" FontFamily="{ThemeResource SymbolThemeFontFamily}"  Foreground="{ThemeResource AppText}"/>
                </Button>

                <Button x:Name="_DestopButton" Style="{StaticResource AppTagRoundedButton}">
                    <Button.Tag>
                        From Destop
                    </Button.Tag>
                    <FontIcon Grid.Column="1" Glyph="&#xEC4E;" FontSize="20" FontFamily="{ThemeResource SymbolThemeFontFamily}"  Foreground="{ThemeResource AppText}"/>
                </Button>

                <Rectangle Height="1" Fill="{StaticResource AppBorderBrush}"/>

                <TextBlock FontSize="22" FontWeight="Light" Style="{StaticResource AppTextBlock}">
                    Size
                </TextBlock>
                
                <Button x:Name="_WidthButton" Style="{StaticResource AppTagRoundedButton}">
                    <Button.Tag>
                        Change Width
                    </Button.Tag>
                    <FontIcon Grid.Column="1" Glyph="&#xE746;" FontSize="18" FontFamily="{ThemeResource SymbolThemeFontFamily}"  Foreground="{ThemeResource AppText}"/>
                </Button>
                                             
                <Slider x:Name="HeightSlider" Margin="2" Minimum="40" Maximum="80" StepFrequency="10" Style="{StaticResource AppOpacitySliderStyle}">
                    <Slider.Header>
                        <TextBlock Margin="6,0" Style="{StaticResource AppTextBlock}">
                            Change Height
                        </TextBlock>
                    </Slider.Header>
                </Slider>

                <TextBlock FontSize="22" FontWeight="Light" Style="{StaticResource AppTextBlock}">
                    Layout
                </TextBlock>
                
                <Button x:Name="LayoutButton" Style="{StaticResource AppTagRoundedButton}">
                    <Button.Tag>
                        Show Menu Layout
                    </Button.Tag>
                    <FontIcon Grid.Column="1" Glyph="&#xE81E;" FontSize="20" FontFamily="{ThemeResource SymbolThemeFontFamily}"  Foreground="{ThemeResource AppText}"/>
                </Button>

            </StackPanel>
        </Flyout>
    </UserControl.Resources>

    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="AddButton" Height="42" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0" BorderBrush="Transparent" Background="Transparent">
            <FontIcon Glyph="&#xE109;" FontFamily="{ThemeResource SymbolThemeFontFamily}"/>
        </Button>

        <Canvas Grid.Row="1">
            <Border x:Name="IndicatorBorder" MinWidth="50" Height="40"/>
        </Canvas>

        <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Hidden"
                      >
            <ItemsControl x:Name="ItemsControl" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <!--Layers-->
            </ItemsControl>
        </ScrollViewer>
        
    </Grid>
</UserControl>